<div class="container">
    <div id="mainCard" class="card">
        <div class="card-header">
            <div class="d-flex justify-content-end">
                <div class="mr-2">
                    <button id="btnReporte" class="btn btn-outline-secondary">Generar Reporte</button>
                </div>
                <button id="btnNuevo" class="btn btn-outline-primary" data-toggle="modal" data-target="#personasFisicas">Nuevo</button>
            </div>
        </div>
        <div class="card-body">
            <table id="tablePersonas">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Apellido Paterno</th>
                        <th>Apellido Materno</th>
                        <th>RFC</th>
                        <th>Fecha de Nacimiento</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="body_tablePersonas"></tbody>
            </table>
            <button id="btnSalir" class="btn btn-outline-danger" >Cerrar Sesión</button>
        </div>
    </div>

    <div class="modal fade" id="personasFisicas" tabindex="-1" role="dialog" aria-labelledby="nuevoRegistro" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="tituloModalPersonas"></h5>
                </div>
                <div class="modal-body">
                    <form class="needs-validation" novalidate>
                        <div class="row">
                            <div class="col">
                                <label for="nombre" class="font-weight-bold">Nombre</label>
                                <input type="text" class="form-control" id="nombre" placeholder="Nombre" required>
                                <div id="a1" class="font-weight-bold" style="color: red" hidden>
                                    Escribe un Nombre
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <label for="ap" class="font-weight-bold">Apellido Paterno</label>
                                <input type="text" class="form-control" id="ap" placeholder="Apellido Paterno" required>
                                <div id="a2" class="font-weight-bold" style="color: red" hidden>
                                    Escribe un Apellido Paterno
                                </div>
                            </div>
                            <div class="col">
                                <label for="am" class="font-weight-bold">Apellido Materno</label>
                                <input type="text" class="form-control" id="am" placeholder="Apellido Materno" required>
                                <div id="a3" class="font-weight-bold" style="color: red" hidden>
                                    Escribe un Apellido Materno
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <label for="rfc" class="font-weight-bold">RFC</label>
                                <input type="text" class="form-control" id="rfc" maxlength="13" oninput="javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);" placeholder="RFC" required>
                                <div  id="a4"class="font-weight-bold" style="color: red"  hidden>
                                    Escribe un RFC
                                </div>
                            </div>
                            <div class="col">
                                <label for="fechaN" class="font-weight-bold">Fecha de Nacimiento</label>
                                <input type="date" class="form-control" id="fechaN" required>
                                <div id="a5" class="font-weight-bold" style="color: red"  hidden>
                                    Selecciona una fecha
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-center mt-4">
                            <button type="button" class="btn btn-outline-danger mr-2" data-dismiss="modal" id="btnCerrar">Cerrar</button>
                            <button type="submit" class="btn btn-outline-success" id="btnGuardar"></button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    
    @* VISTA PARCIAL PARA EL REPORTE *@
    @await Html.PartialAsync("_Toka")

    @* VISTA PARCIAL PARA EL LOADING *@
    @await Html.PartialAsync("_Loading")
</div>
@section Scripts{
    <script src="~/Services/Catalogo/CatalogoService.js"></script>
    <script src="~/js/Catalogo/Catalogo.js"></script>
}