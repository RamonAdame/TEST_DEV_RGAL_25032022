<div class="container login">
    <div class="card">
        <div class="card-body">
            <form>
                <div class="form-group">
                    <label for="correo">Correo</label>
                    <input type="email" class="form-control" id="correo" placeholder="Correo">
                </div>
                <div class="form-group">
                    <label for="pass">Contraseña</label>
                    <input type="password" class="form-control" id="pass" placeholder="Contraseña">
                </div>
                <span id="mensajeError" class="text-danger font-weight-bold"></span>
                <div class="d-flex justify-content-center">
                    <button id="login" class="btn btn-primary">Entrar</button>
                </div>
            </form>
        </div>
    </div>
    @* VISTA PARCIAL PARA EL LOADING *@
    @await Html.PartialAsync("_Loading")
</div>

@section Scripts{
    <script src="~/Services/Login/LoginService.js"></script>
    <script src="~/js/Login/Login.js" type="module"></script>
}